<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="#FFFFFF"
    >

    <TextView
        android:text="Subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textSubjectName"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="normal|bold" />

    <TextView
        android:text="location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textTime"
        android:layout_toRightOf="@+id/imgLocation"
        android:layout_toEndOf="@+id/imgLocation"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/textLocation"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textTime" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_location_on_black_18px"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:id="@+id/imgLocation"
        android:paddingTop="5dp"
        android:layout_alignBottom="@+id/imgTime"
        android:layout_toRightOf="@+id/textTime"
        android:layout_toEndOf="@+id/textTime"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_access_time_black_18px"
        android:id="@+id/imgTime"
        android:layout_alignTop="@+id/textTime"
        android:layout_alignLeft="@+id/textSubjectName"
        android:layout_alignStart="@+id/textSubjectName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTeacherName"
        android:textSize="18sp"
        android:text="Teacher"
        android:padding="5dp"
        android:paddingLeft="0dp"
        android:textColor="#000000"
        android:paddingStart="0dp"
        android:layout_below="@+id/textSubjectName"
        android:layout_alignLeft="@+id/textSubjectName"
        android:layout_alignStart="@+id/textSubjectName" />

    <TextView
        android:text="8 -10am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTime"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@+id/textTeacherName"
        android:layout_toRightOf="@+id/imgTime"
        android:layout_toEndOf="@+id/imgTime"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        android:layout_below="@+id/imgTime"
        android:layout_marginTop="20dp"/>

</RelativeLayout>